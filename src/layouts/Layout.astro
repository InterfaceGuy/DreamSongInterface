---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A dynamically generated scroll-telling experience from Obsidian Canvas" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!--
            IMPORTANT: You need to obtain the TeX Gyre Termes font files
            (e.g., in WOFF2 format) and place them in the `public/fonts/` directory.
            The paths below are placeholders.
        -->
        <style is:global>
            /* Define @font-face for TeX Gyre Termes */
            @font-face {
                font-family: 'TeX Gyre Termes';
                src: url('/fonts/texgyretermes-regular.woff2') format('woff2'),
                     url('/fonts/texgyretermes-regular.woff') format('woff'); /* Fallback */
                font-weight: normal;
                font-style: normal;
                font-display: swap; /* Use swap for better perceived performance */
            }

            @font-face {
                font-family: 'TeX Gyre Termes';
                src: url('/fonts/texgyretermes-italic.woff2') format('woff2'),
                     url('/fonts/texgyretermes-italic.woff') format('woff');
                font-weight: normal;
                font-style: italic;
                font-display: swap;
            }

            @font-face {
                font-family: 'TeX Gyre Termes';
                src: url('/fonts/texgyretermes-bold.woff2') format('woff2'),
                     url('/fonts/texgyretermes-bold.woff') format('woff');
                font-weight: bold;
                font-style: normal;
                font-display: swap;
            }

            @font-face {
                font-family: 'TeX Gyre Termes';
                src: url('/fonts/texgyretermes-bolditalic.woff2') format('woff2'),
                     url('/fonts/texgyretermes-bolditalic.woff') format('woff');
                font-weight: bold;
                font-style: italic;
                font-display: swap;
            }

            /* Global styles */
            :root {
                --accent: 136, 58, 234;
                --accent-light: 224, 204, 250;
                --accent-dark: 49, 10, 101;
                --accent-gradient: linear-gradient(
                    45deg,
                    rgb(var(--accent)),
                    rgb(var(--accent-light)) 30%,
                    white 60%
                );
            }

            html {
                box-sizing: border-box;
                scroll-behavior: smooth;
            }
            *, *:before, *:after {
                 box-sizing: inherit;
            }


            body {
                margin: 0;
                /* Apply pitch black background and pure white text */
                background-color: #000000;
                color: #ffffff;
                /* Apply TeX Gyre Termes font */
                font-family: 'TeX Gyre Termes', Georgia, serif; /* Add fallback fonts */
                font-size: 16px; /* Base font size */
                line-height: 1.6; /* Base line height */
            }

            /* Basic styling for text content within ScrollBlock */
             .text-container p {
                margin-bottom: 1em;
             }
             .text-container h1,
             .text-container h2,
             .text-container h3,
             .text-container h4,
             .text-container h5,
             .text-container h6 {
                 font-family: 'TeX Gyre Termes', Georgia, serif;
                 color: rgb(var(--accent-light));
                 margin-top: 1.5em;
                 margin-bottom: 0.5em;
                 line-height: 1.3;
             }
             .text-container h1 { font-size: 2em; }
             .text-container h2 { font-size: 1.75em; }
             .text-container h3 { font-size: 1.5em; }
             /* Add more heading styles if needed */

             .text-container a {
                 color: rgb(var(--accent-light));
                 text-decoration: underline;
             }
             .text-container a:hover {
                 color: #ffffff;
             }

            /* Ensure code blocks have a readable style */
            code, pre {
                font-family:
                    Menlo,
                    Monaco,
                    'Courier New',
                    monospace;
                background-color: #1a1a1a;
                padding: 0.2em 0.4em;
                border-radius: 3px;
                font-size: 0.9em;
            }
            pre {
                padding: 1em;
                overflow-x: auto;
            }

        </style>
	</head>
	<body>
		<slot />
	</body>
</html>
